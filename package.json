{
  "name": "shopify-theme-dev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env npm-run-all -p watch:webpack watch:server",
    "watch:webpack": "cross-env webpack --watch",
    "watch:server": "browser-sync start --config bs-config.js",
    "webpack:prd": "cross-env NODE_MODE=\"production\" webpack",
    "shopify": "cross-env NODE_TYPE=\"shopify\" npm-run-all -p theme:serve watch:webpack",
    "deploy": "cross-env NODE_TYPE=\"shopify\" npm-run-all webpack:prd push",
    "newtheme": "npm-run-all theme:init clean:unused",
    "clean:unused": "rimraf ./shopify/.gitignore",
    "theme:init": "shopify theme init shopify",
    "theme:serve": "cd shopify && shopify theme serve",
    "pull": "cd shopify && shopify theme pull -n",
    "push": "cd shopify && shopify theme push -n",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet",
    "codesample": "opener https://shopify.github.io/liquid-code-examples/",
    "reference": "opener https://shopify.dev/api/liquid",
    "opendoc": "npm-run-all codesample cheat reference"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
